doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css' rel='stylesheet')
  link(rel='stylesheet' href='css/form.css')
  title Form
.container.mt-3
  form(action='/' method='post')
    .h1 Student Registration Form 
    .row
      .col-4
        label(for='name') Sur name
        input#su_name.form-control(type='text' placeholder='Enter Surname' name='su_name' required, onclick="checkName1()")
      .col-4
        label(for='G_name') Given name
        input#G_name.form-control(type='text' placeholder='Enter Given Name' name='G_name' required, onclick="checkName2()")
      .col-4
        label(for='email') Title
        input#title.form-control(type='text' placeholder='--Select Title--' name='email' required onclick=" checkTitle()")
      .col-6
        input(type='image' src='/' alt='image')
        label(for='image') upload
      .col-4
        label(for='gender') Gender:
        .radio
          input#gender1(type='radio' name='gender' autocomplete='off' value='male', required, onclick=" checkGender()")
          span Male
          input#gender2(type='radio' name='gender' autocomplete='off' value='female' required  onclick=" checkGender2()")
          span Female
      .col-4
        label(for='email') Date of Birth
        input#date1.form-control(type='date' placeholder='--Select Title--' name='date' required, onclick=" checkDate()")
      .col-4
        .form-field
          label(for='country') Country:
          select#country.form-control(name='country' input='' type='text' placeholder='--Select Title--' required, onclick=" checkCountry()")
            option(value='' name='')
            option(value='ug' name='ug') Uganda
            option(value='ke' name='ke') Kenya
            option(value='tz' name='tz') Tanzania
      .col-4
        label(for='residence') Place of Residence
        input#residence.form-control(type='text' placeholder='Enter Place of Residence' name='residence' required,  onclick=" checkResidence()")
      .col-4
        label(for='email') Nationality
        input#nationality.form-control(type='text' placeholder='--Enter your Nationality--' name='nationality' required, onclick=" checkNationality()")
    button.btn(type='submit' style='background-color: rgb(168, 94, 173); color: aliceblue;', onclick='alertText()') Register
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js')
script(src='js/form_val.js')
script(src='js/alert.js')

